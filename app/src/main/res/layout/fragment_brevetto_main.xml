<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/brevetto_main_titolo"
            android:id="@+id/textView_brevetto_main_titolo"
            android:layout_gravity="center_horizontal"/>

        <Space
            android:layout_width="20px"
            android:layout_height="30px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/brevetto_main_intro"
            android:id="@+id/textView_brevetto_main_intro"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"/>

        <Space
            android:layout_width="20px"
            android:layout_height="30px"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/brevetto_main_teoria"
                    android:id="@+id/textView_brevetto_main_teoria"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/brevetto_main_inserisci"
                    android:id="@+id/button_brevetto_main_teoria"
                    android:onClick="inserisciBrevettoTeoria"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/brevetto_main_pratica"
                    android:id="@+id/textView_brevetto_main_pratica"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/brevetto_main_inserisci"
                    android:id="@+id/button_brevetto_main_pratica"
                    android:onClick="inserisciBrevettoPratica"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/brevetto_main_visita_medica"
                    android:id="@+id/textView_brevetto_main_visita_medica"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/brevetto_main_inserisci"
                    android:id="@+id/button_brevetto_main_visita_medica"
                    android:onClick="inserisciBrevettoVisitaMedica"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/brevetto_main_enac"
                    android:id="@+id/textView_enac"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_codice_enac"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_below="@+id/textView_enac"
                    android:layout_alignParentStart="true"/>

            </RelativeLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/brevetto_main_conferma"
            android:id="@+id/button_brevetto_main_conferma"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>

</RelativeLayout>