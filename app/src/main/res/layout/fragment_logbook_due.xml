<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:text="@string/logbook_due_titolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_logbook_due_titolo"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp">

            <TextView
                android:text="@string/logbook_due_codice_identificativo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_logbook_due_codici_identificativi"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textAlignment="center"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:weightSum="1">

                <TextView
                    android:text="@string/logbook_due_apr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_logbook_due_apr"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_logbook_due_apr"
                    />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:elevation="0dp"
                android:background="@android:color/background_dark"
                android:id="@+id/layout_linea"
                android:layout_height="1dp">
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/logbook_due_layout_spr"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:text="@string/logbook_due_spr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_logbook_due_spr"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textAlignment="center"/>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:id="@+id/layout_linea"
                android:background="@android:color/background_dark"
                android:layout_height="1dp">
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:text="@string/logbook_due_simulatore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_logbook_due_simulatore"
                    android:layout_weight="1"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>

                <CheckBox
                    android:text="@string/logbook_due_simulatore_utilizzato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_simulatore"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:text="@string/logbook_due_conferma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_logbook_due_conferma"
            android:onClick="confermaLogbookDue"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>